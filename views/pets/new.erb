<!-- Add tabindex="x" to form Objects -->
<div class="form-wrapper">
  <form method="post" action="/pets">

    <div class="input_wrapper">
      <label for="pet-name-field">Pet Name:</label>
      <input required
      type="text"
      name="name"
      id="pet-name-field"
      />
      </div>


      <div class="input_wrapper">
        <label for="date-of-birth-field">Date of Birth:</label>
      <input required
      type="text"
      name="date_of_birth"
      id="date-of-birth-field"
      />
    </div>

      <div class="input_wrapper">
        <label for="pet-type-selection"  style="visibility: hidden;">>Select Pet:</label>
      <select name="pet_type_id" id="pet-type-selection" required>
        <option value ="" selected>Select Pet Type</option>
        <% @pet_types.each do |pet_type| %>
        <option value=<%= pet_type.id %>><%= pet_type.pet_type.capitalize %></option>
        <% end %>
      </select>
    </div>

      <div class="input_wrapper">
        <label for="vet-selection" style="visibility: hidden;">Select Vet:</label>
      <select name="vet_id" id="vet-selection" required>
        <option value ="" selected>Select Vet</option>
        <% @vets.each do |vet| %>
        <option value=<%= vet.id %>><%= vet.name %></option>
        <% end %>
      </select>
    </div>

      <div class="input_wrapper">
        <label for="owner-selection" style="visibility: hidden;">Select Owner:</label>
      <select name="owner_id" id="owner-selection">
        <option value ="" selected>Select Owner</option>
        <% @owners.each do |owner| %>
        <option value=<%= owner.id %>><%= owner.name %></option>
        <% end %>
      </select>
    </div>

    <div class="input_wrapper">
        <label for="treatment-notes">Treatment Notes:</label>
      <textarea rows="5" cols="50" id="treatment-notes" name='treatment_notes'>
      </textarea>
    </div>

  <div class="input_wrapper">
      <div class="button">
        <input type="submit" value="Register Pet">
      </div>
      </div>

    </form>
  </div>
