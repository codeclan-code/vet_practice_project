<!-- Add tabindex="x" to form Objects -->
<div class="form-wrapper">
  <form method="post" action="/pets">

    <div class = "inputWrapper">
      <label for="pet-name-field">Pet Name:</label>
      <input required
      type="text"
      name="name"
      id="pet-name-field"
      />
    </div>

    <div class = "inputWrapper">
      <label for="date-of-birth-field">Date of Birth:</label>
      <input required
      type="text"
      name="date_of_birth"
      id="date-of-birth-field"
      />
    </div>

    <div class = "inputWrapper">
      <label for="pet-type-selection">Select Pet:</label>
      <select name="pet_type_id" id="pet-type-selection">
        <% @pet_types.each do |pet_type| %>
        <option value=<%= pet_type.id %>><%= pet_type.pet_type.capitalize %></option>
        <% end %>
      </select>
    </div>


    <div class = "inputWrapper">
      <label for="owner-name-field">Owner's name:</label>
      <input required
      type="text"
      name="owner_name"
      id="owner-name-field"
      />
    </div>

    <div class = "inputWrapper">
      <label for="owner-mobile-field">Owner's Mobile:</label>
      <input required
      type="text"
      name="owner_mobile"
      id="owner-mobile-field"
      />
    </div>

    <div class = "inputWrapper">
      <label for="vet-selection">Select Vet:</label>
      <select name="vet_id" id="vet-selection">
        <% @vets.each do |vet| %>
        <option value=<%= vet.id %>><%= vet.name %></option>
        <% end %>
      </select>
    </div>

    <div class = "inputWrapper">
      <label for="treatment-notes">Treatment Notes:</label>
      <textarea rows="10" cols="50" id="treatment-notes" name='treatment_notes'>
      </textarea>
    </div>

    <input type="submit" value="Register Pet">
  </form>
</div>
